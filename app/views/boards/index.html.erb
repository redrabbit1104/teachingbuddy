<div class="board_title">
  <h1>Bullentin Board</h1>
</div>

<div class="date_today">
  <%# 後で曜日の色を土、日の場合は変える処理をする %>
  <%= @this_year %>年<%= @this_month %>月<%= @this_day %>日 (<span class="wday"><%= @this_wday%></span>)
</div>

<table class="table_wrapper" border="1">
  <thead>
    <tr>
      <th id="board_name">Name</th>
      <th id="board_date">Date</th>
      <th id="board_memo">Memo</th>
      <th id="board_edit">Edit</th>
      <th id="board_delete">Delete</th>
    </tr>
  </thead>
  <tbody>
    <% @board.each do |board| %>
    <tr>
      <td><%= board.user.avatar %><%= board.user_id %></td>
      <td><%= board.post_date %></td>
      <td><%= board.post %></td>
      <td>内容2</td>
      <td>内容1</td>
    </tr>
    <% end %>
    </tbody>
</table>

<section id="comment">
  <h1>Comment</h1>
  <%= form_with url: "/boards", method: :post, id: "board_form" do |f| %>
    <%= raw sprintf(
                  f.date_select(
                    :birthday,
                    class:'select-birth',
                    id:"birth-date",
                    use_month_numbers: true,
                    prompt:'--',
                    start_year: 1930,
                    end_year: (Time.now.year - 5),
                    date_separator: '%s'),
                  "<p> 年 </p>", "<p> 月 </p>") + "<p> 日 </p>" %>
    <%= f.text_field :post %>
    <%= f.submit '投稿する', id: "submit" %>
  <% end %>
</section>
